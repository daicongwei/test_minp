page{
  background-color: #f4f4f4;
}
.boxUl{
  width: 710rpx;
  margin: 20rpx auto;
  background-color: #fff;
  overflow: hidden;
  box-shadow: rgba(0,0,0,0.2) 2rpx 2rpx 6rpx;
  border-radius: 10rpx;
}
.Box_li{
  /* border: red solid 1rpx; */
  height: 150rpx;
  padding: 10rpx;
  display: flex;
}
.left{
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.left .img{
  width: 200rpx;
  height: 150rpx;
}

.rightBox{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-bottom: 5rpx;
}
.titel{
  font-size: 30rpx;
  color: #313131;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: auto;
}
.boxF{
  font-size: 24rpx;
  margin-top: auto;
  color: #909090;
}
.textCont{
  border-top:#f4f4f4 solid 1rpx;
  width: 690rpx;
  margin: 0 auto;
  font-size: 22rpx;
  margin-top: auto;
  color: #909090;
  /* text-indent: 2em; */
  padding: 10rpx;
  box-sizing: border-box;
}